                <field id="ideal_desc" translate="label" type="text" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>iDeal Description</label>
                </field>
                <field id="sofort_digital_active" translate="label" type="select" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sofort Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sofort_digital_desc" translate="label" type="text" sortOrder="23" showInDefault="1" showInWebsite="1" showInStore="1">
