                    <source_model>YaBandPay\Payment\Model\Config\Source\Order\Status\Order</source_model>
                </field>
                <field id="order_paid_status" translate="label" type="select" sortOrder="45" showInDefault="1" showInWebsite="1" showInStore="0">
